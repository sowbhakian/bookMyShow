    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/styles.css">

</head>

<body class="wholeBody" style="overflow-x: hidden;">

    <!-- NavBar -->
    <section id="Nav-bar-section">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark  navbar-whole-class ">
            <div class="container">
                <p class="navbar-brand text-warning"> BookMyShow</p>
                <!-- makes the text right  -->
                <div class="w-80 text-right ">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                </div>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <!-- phone view - right  -->
                    <div class="navbar-nav mx-auto text-right">
                        <a href="/" class="nav-link nav-link-ltr textinnav text-warning">Home</a>
                        <a href="#" class="nav-link nav-link-ltr textinnav text-warning">Seats</a>
                        <a href="/contact" class="nav-link nav-link-ltr textinnav text-warning">Contact</a>
                    </div>
                    <a href="#login">
                        <button type="button" class="btn btn-outline-light ">Login</button>
                    </a>
                    <!-- <i class="fas fa-user-tie"></i>sdfsdf -->
                </div>
            </div>
        </nav>
    </section>


    <!-- indiv threater -->
    <section>
        <div class="row">

            <div class="boxpadding">

                <div class="border border-danger text-center ">
                    <div class="row">

                        <h2 class="text-dark heading">
                            Theater Name: <span class="text-danger">
                            <%=theatername%>
                        </span>
                        </h2>
                        <h2 class="text-dark heading">
                            movieName Name: <span class="text-danger">
                            <%=movieName%>
                        </span>
                        </h2>
                        <h2 class="text-dark heading">
                            certification Name: <span class="text-danger">
                            <%=certification%>
                        </span>
                        </h2>
                        <h2 class="text-dark heading">
                            Language : <span class="text-danger">
                            <%=Lang%>
                        </span>
                        </h2>
                    </div>

                    <h2 class="text-dark heading">
                        time1: <span class="text-danger">
                            <%=time1%>
                        </span>
                    </h2>
                    <h2 class="text-dark heading">
                        time2: <span class="text-danger">
                            <%=time2%>
                        </span>
                    </h2>
                    <h2 class="text-dark heading">
                        time3: <span class="text-danger">
                            <%=time3%>
                        </span>
                    </h2>
                    <h2 class="text-dark heading">
                        Seats Count : <span class="text-danger">
                           <% if(count> 0){%>
                            <%=count%>
                            <%}else{%>
                                0
                                <%}%>
                        </span>
                    </h2>
                </div>
            </div>

        </div>


    </section>


    <!-- Booking -->

    <div class="booking">
        <form action="/bookingDone" method="post">
            <label for="exampleForm2">Email</label>
            <input type="email" class="form-control" name="mail">

            <label for="exampleForm2">No. of Ticket</label>
            <input type="number" class="form-control" name="number">


            <label for="exampleForm2">Choose Slot</label>
            <div class="custom-control custom-radio">
                <div class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" id="defaultGroupExample1" name="time" checked>
                    <label class="custom-control-label" for="defaultGroupExample1">10.00am to 12.00pm</label>
                </div>

                <!-- Group of default radios - option 2 -->
                <div class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" id="defaultGroupExample2" name="time">
                    <label class="custom-control-label" for="defaultGroupExample2">2.00am to 4.00pm</label>
                </div>

                <!-- Group of default radios - option 3 -->
                <div class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" id="defaultGroupExample3" name="time">
                    <label class="custom-control-label" for="defaultGroupExample3">6.00am to 8.00pm</label>
                </div>


            </div>
            <div class="mt-3">

                <button type="submit" class="btn btn-warning">Book</button>
            </div>
            <input type="hidden" name="theatername" value="<%=theatername%>">
        </form>


    </div>

    <!-- jQuery -->
    <script src='https://code.jquery.com/jquery-3.3.1.slim.min.js'></script>
    <!-- Popper JS -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js'></script>
    <!-- Bootstrap JS -->
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js'></script>


</body>

</html>